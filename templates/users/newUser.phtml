<h1>New User</h1>
<hr>
<form action="/users" method="post">
    <div>
        <label>
            Nickname:
            <input type="text" required name="user[nickname]">
        </label>
    </div>
    <div>
        <label>
            Email:
            <input type="text" required name="user[email]">
        </label>
    </div>
    <input type="submit" name="Submit">
</form>
